<div class="side-header">
  <div class="user-name">
    <%#= link_to current_user.name, edit_user_path(current_user) %>
    <%= link_to edit_user_path(current_user) do %>
      <%= current_user.name %>
    <% end %>
  </div>
  <div class="room-create-btn">
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>
<div class="side-rooms">
  <% current_user.rooms.each do |room| %>   <%# アソシエーション時の表記の関連性を意識 %>
    <div class="room">
      <div class="room-name">
        <%= link_to room.name, room_messages_path(room) %>
      </div>
    </div>
  <% end %>
</div>